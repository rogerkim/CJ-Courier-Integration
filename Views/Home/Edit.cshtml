@model MangoCarrierSystem.Models.MainViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("SaveOrder", "Home"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row col-md-6">
            <table class="table">
                <tr>
                    <th>ID</th>
                    <th>Order ID</th>
                    <th>Status</th>
                </tr>
                <tr>
                    <td>@Model.ID</td>
                    <td>@Model.ORDER</td>
                    <td>@Model.STATUS </td>
                </tr>
            </table>
        </div>
        <div class="row"></div>
        <hr />
        @Html.HiddenFor(m => m.ID)
        <div class="form-group">
            @Html.LabelFor(model => model.PROVINCE, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PROVINCE, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ADDRESS, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ADDRESS, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Step2")
</div>

